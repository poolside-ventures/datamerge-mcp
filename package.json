{
    "name": "@datamerge/mcp",
    "version": "1.0.0",
    "description": "Model Context Protocol (MCP) server for the DataMerge Company API",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "datamerge-mcp": "dist/cli.js",
        "datamerge-mcp-http": "dist/cli-http.js",
        "datamerge-mcp-streamable": "dist/cli-streamable.js"
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "start": "node dist/cli.js",
        "start:http": "node dist/cli-http.js",
        "start:streamable": "node dist/cli-streamable.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "clean": "rm -rf dist",
        "prebuild": "npm run clean"
    },
    "keywords": [
        "mcp",
        "model-context-protocol",
        "datamerge",
        "company",
        "enrichment",
        "hierarchy",
        "api"
    ],
    "author": "DataMerge",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/poolside-ventures/datamerge-mcp.git"
    },
    "bugs": {
        "url": "https://github.com/poolside-ventures/datamerge-mcp/issues"
    },
    "homepage": "https://github.com/poolside-ventures/datamerge-mcp",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.20.1",
        "@types/express": "^5.0.3",
        "axios": "^1.6.0",
        "express": "^5.1.0",
        "zod": "^3.22.0"
    },
    "devDependencies": {
        "@types/jest": "^30.0.0",
        "@types/node": "^20.0.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.0.0",
        "jest": "^29.0.0",
        "ts-jest": "^29.0.0",
        "typescript": "^5.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "files": [
        "dist/**/*",
        "README.md",
        "LICENSE"
    ]
}
